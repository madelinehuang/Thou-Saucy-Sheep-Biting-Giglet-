{
    "manifest_version": 2,
    "name": "Thou Saucy Sheep-Biting Giglet!",
    "version": "0.1",
    "icons": { "16": "images/icon.png",
           "48": "images/icon.png",
          "128": "images/icon.png" },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
  
     "description": "Be classy and Shakespearify thy everyday profanity",
     
     "permissions": [
       "activeTab"
        ],
    
      "browser_action": {
          "default_icon": {              
            "16": "images/icon.png",         
            "24": "images/icon.png",         
            "32": "images/icon.png"        
          }
        }
   
    
}